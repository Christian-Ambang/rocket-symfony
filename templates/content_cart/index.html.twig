{% extends 'base.html.twig' %}

{% block title %}{{ "My cart" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "My cart" | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "ID" | trans }}</th>
                <th>{{ "Quantity" | trans }}</th>
                <th>{{ "Added the" | trans }}</th>
                <th>{{ "actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for content_cart in content_carts %}
            <tr>
                <td>{{ content_cart.id }}</td>
                <td>{{ content_cart.productQty }}</td>
                <td>{{ content_cart.addToCartDate ? content_cart.addToCartDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('content_cart_show', {'id': content_cart.id}) }}">{{ "show" | trans }}</a>
                    <a href="{{ path('content_cart_edit', {'id': content_cart.id}) }}">{{ "edit" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ "contentCart.empty" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('content_cart_new') }}">Create new</a>
{% endblock %}
