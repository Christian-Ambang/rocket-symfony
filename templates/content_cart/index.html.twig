{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
    <h1>Mon panier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th> 
                <th>ProductQty</th>
                <th>AddToCartDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content_cart in content_carts %}
            <tr>
                <td>{{ content_cart.id }}</td>
                <td>{{ content_cart.productQty }}</td>
                <td>{{ content_cart.addToCartDate ? content_cart.addToCartDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('content_cart_show', {'id': content_cart.id}) }}">show</a>
                    <a href="{{ path('content_cart_edit', {'id': content_cart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez aucun article dans votre panier</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('content_cart_new') }}">Create new</a>
{% endblock %}
