    <h1>ContentCart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content_cart.id }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ content_cart.product.name }}</td>
