<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <li><a href="{{ '/fr/' }}">{{ "FR" | trans }}</a></li>
    <li><a href="{{ '/en/' }}">{{ "EN" | trans }}</a></li>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        {% if app.user is null %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">{{ "Log in" | trans }}</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">{{ "Register" | trans }}</a></li>
                        {% else %}
                            <li><a href="{{ path('user_show', { 'id': app.user.id }) }}">{{ "My account" | trans }}</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">{{ "Log out" | trans }}</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('content_cart_index') }}">{{ "Cart" | trans }}</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        <nav>
            <ul>
                <li><a href="{{ path('home') }}">{{ "Home" | trans }}</a></li>
                <li><a href="{{ path('product_index') }}">{{ "Product" | trans }}</a></li>
                <li><a href="{{ path('user_index') }}">{{ "User" | trans }}</a></li>
                <div>--debut-test--</div>
                <li><a href="{{ path('cart_index') }}">{{ "Cart" | trans }}</a></li>
                <li><a href="{{ path('content_cart_index') }}">{{ "ContentCart" | trans }}</a></li>
                <div>--fin-test--</div>
            </ul>
        </nav>
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <p class="alert alert-{{type}}">{{message}}</p>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
