{% extends 'base.html.twig' %}

{% block title %}{{ "Order" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Order" | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "ID" | trans }}</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>{{ "Purchase date" | trans }}</th>
                <td>{{ cart.purchaseDate ? cart.purchaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ "Paid" | trans }}</th>
                <td>{{ cart.paid ? ("Yes" | trans) : ("No" | trans) }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cart_index') }}">{{ "Back to list" | trans }}</a>

    <a href="{{ path('cart_edit', {'id': cart.id}) }}">{{ "edit" | trans }}</a>

    {{ include('cart/_delete_form.html.twig') }}
{% endblock %}
