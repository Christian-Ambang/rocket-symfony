{% extends 'base.html.twig' %}

{% block title %}{{ "User" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "User" | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "ID" | trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ "Email" | trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ "Roles" | trans }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>{{ "Password" | trans }}</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>{{ "Firstname" | trans }}</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>{{ "Lastname" | trans }}</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">{{ "Back to list" | trans }}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ "edit" | trans }}</a>

    {{ include('user/_delete_form.html.twig') }}

    <h4>{{ "Orders" | trans }}</h4>

    {{ include('cart/_cartList.html.twig') }}

{% endblock %}
