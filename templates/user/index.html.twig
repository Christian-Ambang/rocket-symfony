{% extends 'base.html.twig' %}

{% block title %}{{ "user.list" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "user.list" | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "ID" | trans }}</th>
                <th>{{ "Email" | trans }}</th>
                <th>{{ "Roles" | trans}}</th>
                <th>{{ "Password" | trans }}</th>
                <th>{{ "Firstname" | trans }}</th>
                <th>{{ "Lastname" | trans }}</th>
                <th>{{ "actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{{ "show" | trans }}</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ "edit" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ "user.empty" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">{{ "user.added" | trans }}</a>
{% endblock %}
